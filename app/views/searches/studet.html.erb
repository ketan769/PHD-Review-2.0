<div class="container">
<p id=”notice”><%= notice %></p>    
<head>
 
  <form action ="/doc_up"><button  class="btn btn-primary"  style="float: right;">Document Upload</button></button></form>
  <title>PHD-Review-TAMU</title>
</head>

<div class="page-header">
    </br>
    <h1>Student Details</h1>
</div>

<div class="container">
<%@detail.each do |rev| %>
    <form>
        <div class='form-row'>
            
            <div class="form-group col-md-4">
              <label for="uin">UIN</label>
              <input type="text" class="form-control" name="uin"  value = "<%=rev.user[:uin]%>"readonly >
            </div>
            
            <div class="form-group col-md-4">
              <label for="first_name">First Name</label>
              <input type="text" class="form-control" name="first_name"  value = "<%=rev.user[:first_name]%>" readonly >
            </div>
            
            <div class="form-group col-md-4">
              <label for="last_name">Last Name</label>
              <input type="text" class="form-control" name="last_name" value = "<%=rev.user[:last_name]%>" readonly>
            </div>
        </div>
        <div class="form-row">
    
            <div class="form-group col-md-4">
              <label for="start_semester">Start Semester</label>
              <input type="text" class="form-control" name="start_semester" value="<%=rev.user[:start_semester]%>" readonly>
            </div>
              
            <div class="form-group col-md-4">
              <label for="cumul_gpa">Cumulative GPA</label>
              <input type="number" step="0.01" min="0" max="4" class="form-control" name="cumul_gpa" value="<%=rev.user[:cumul_gpa]%>" readonly>
            </div>
              
            <div class="form-group col-md-4">
              <label for="advisor">Advisor</label>
              <input type="text" class="form-control" name="advisor" value="<%=@tempad%>" readonly>
            </div>
        </div>
        <div class="form-row">
  
            <div class="form-group col-md-6">
              <label for="degree_plan_date">Degree Plan Date</label>
              <input type="date" class="form-control" name="degree_plan_date" value="<%=rev.user[:degree_plan_date]%>" readonly>
            </div>
          
            <div class="form-group col-md-6">
              <label for="prelim_date">Prelim Date</label>
              <input type="date" class="form-control" name="prelim_date"  value="<%=rev.user[:prelim_date]%>" readonly>
            </div>
          
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
              <label for="proposal_date">Proposal Date</label>
              <input type="date" class="form-control" name="proposal_date"  value="<%=rev.user[:proposal_date]%>" readonly>
            </div>  
            
            <div class="form-group col-md-6">
              <label for="final_exam_defence_date">Final Exam Defence Date</label>
              <input type="date" class="form-control" name="final_exam_defense_date"  value="<%=rev.user[:final_exam_defence_date]%>" readonly>
            </div>
            </div>
        </form>
  <div class="page-header">
    </br>
    <h1>Decisions</h1>
</div>

        <% @revs.each do |rev| %>
            <div class="row">
            <div class="col-md-4">
            <div class="bs-component">
              <h4>Review Year</h4>
              <p><%= rev[:year] %></p>
            </div>
            </div>
            
            <div class="col-md-4">
            <div class="bs-component">
              <h4>Review Score</h4>
              <p><%= rev[:review_score] %></p>
            </div>
            </div>
            
            <div class="col-md-4">
            <div class="bs-component">
              <h4>Decision Letter</h4>
              <form action="/view_letter">
                 <input type="hidden" name ="uin_let" value ="<%= rev.user[:uin] %>">
                 <input type="hidden" name ="year_let" value ="<%= rev[:year] %>">
                 <button type ="submit" class="btn btn-outline-primary">View Decision Letter</button>
              </form>
            </div>
            </div>
        
        </div>
        <hr class="my-4">
        <% end %>
        </br>
        </div>
    </form>
    </div>
<%end%>
</body> 
</div>
</html>
