<html>
<link rel="stylesheet" href="https://bootswatch.com/4/pulse/bootstrap.min.css" integrity="" crossorigin="anonymous">
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <a class="navbar-brand" href="#">PHD REVIEW SYSTEM</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
</nav>
<div class="container">
<p id=”notice”><%= notice %></p>    
<head>
  <form action ="/login"><button  class="btn btn-primary"  style="float: right;">Log Out</button></form>
  <title>PHD-Review-TAMU</title>
</head>

<div class="page-header">
    </br>
    <h1>Student Details</h1>
</div>

<div class="container">
<%@detail.each do |rev| %>
<bootstrap_form_for  >

    <form action ="/det_update">
        <div class='form-row'>
            
            <div class="form-group col-md-4">
              <label for="uin">UIN</label>
              <input type="text" class="form-control" name="uin"  value = "<%=rev.user[:uin]%>" >
            </div>
            
            <div class="form-group col-md-4">
              <label for="first_name">First Name</label>
              <input type="text" class="form-control" name="first_name"  value = "<%=rev.user[:first_name]%>" >
            </div>
            
            <div class="form-group col-md-4">
              <label for="last_name">Last Name</label>
              <input type="text" class="form-control" name="last_name" value = "<%=rev.user[:last_name]%>" >
            </div>
        </div>
        <div class="form-row">
    
            <div class="form-group col-md-4">
              <label for="start_semester">Start Semester</label>
              <input type="text" class="form-control" name="start_semester" value="<%=rev.user[:start_semester]%>" >
            </div>
              
            <div class="form-group col-md-4">
              <label for="cumul_gpa">Cumulative GPA</label>
              <input type="number" step="0.01" min="0" max="4" class="form-control" name="cumul_gpa" value="<%=rev.user[:cumul_gpa]%>" >
            </div>
              
            <div class="form-group col-md-4">
              <label for="advisor">Advisor</label>
              <input type="text" class="form-control" name="advisor" value="<%=@tempad%>" readonly>
            </div>
        </div>
        <div class="form-row">
  
            <div class="form-group col-md-6">
              <label for="degree_plan_date">Degree Plan Date</label>
              <input type="date" class="form-control" name="degree_plan_date" value="<%=rev.user[:degree_plan_date]%>" >
            </div>
          
            <div class="form-group col-md-6">
              <label for="prelim_date">Prelim Date</label>
              <input type="date" class="form-control" name="prelim_date"  value="<%=rev.user[:prelim_date]%>">
            </div>
          
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
              <label for="proposal_date">Proposal Date</label>
              <input type="date" class="form-control" name="proposal_date"  value="<%=rev.user[:proposal_date]%>">
            </div>  
            
            <div class="form-group col-md-6">
              <label for="final_exam_defence_date">Final Exam Defence Date</label>
              <input type="date" class="form-control" name="final_exam_defence_date"  value="<%=rev.user[:final_exam_defence_date]%>">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
              <label for="sr">Student Report</label>
              <input type="text" class="form-control" name="student_report">
            </div>
            
            <div class="form-group col-md-6">
              <label for="cv">CV</label>
              <input type="text" class="form-control" name="cv">
            </div>
        </div>
        <% @revs.each do |rev| %>
            <div class="form-row">
            <div class="form-group col-md-6">
              <label for="review_year">Review Year</label>
              <input type="text" class="form-control" name="review_year" value="<%= rev[:year] %>" readonly>
            </div>
            
            <div class="form-group col-md-6">
              <label for="review_decision">Decision</label>
              <input type="text" class="form-control" name="review_decision" value="<%= rev[:review_score] %>" readonly>
            </div>
        </div>
        <% end %>
        </div>
        </br>
         <button type="submit" class="btn btn-primary">Save</button>
        
    </form>
    
    
</div>
<%end%>
</body> 
</div>
</html>
