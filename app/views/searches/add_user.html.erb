<html>

<link rel="stylesheet" href="https://bootswatch.com/4/pulse/bootstrap.min.css" integrity="" crossorigin="anonymous">
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <a class="navbar-brand" href="#">PHD REVIEW SYSTEM</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
</nav>
<div class="container">
<p id=”notice”><%= notice %></p>    
<div class="page-header">
<head>
      <title>PHD-Review-TAMU</title>
   </head>

<h1>Create User</h1>
</div>
<div class="container">
<bootstrap_form_for>  
<form action ="/user_create" >
    <div class="form-row">
      <fieldset>
        <div class="form-group">
          <label for="UIN">UIN</label>
          <input type="text" name="uin" class="form-control" maxlength="10" >
        </div>
    <fieldset>
    <div class="form-group-col-md-4">
      <label for="first_name">First Name</label>
      <input type="text" name="first_name" class="form-control" maxlength="20" >
    </div>
    <fieldset>
    <div class="form-group-col-md-6">
      <label for="last_name">Last Name</label>
      <input type="text" name="last_name" class="form-control" maxlength="20" >
    </div>
    
    <fieldset>
     <div class="form-group">
      <label for="review_year">Review Year</label>
      <input type="text" name="review_year" class="form-control" maxlength="4" >
    </div>
      <fieldset>
    <div class="form-group">
      <label for="role">Role</label>
      <select name="role">
  <option>A</option>
  <option>S</option>
  <option>F</option>
</select>
    </div>
      <fieldset>
      
    <div class="form-group">
      <label for="advisor">Advisor</label>
      <select name="advisor">
      <% @temp21.each do |ad| %>  
        <option><%=ad%></option>
      <%end%>
</select>
    </div>
      <fieldset>
    <div class="form-group">
      <label for="email">Email</label>
      <input type="text" name="email" class="form-control" >
    </div>
  <fieldset>
     <div class="form-group">
      <label for="password">Password</label></label>
      <input type="text" name="password"  class="form-control" >
    </div>
  <fieldset>
     <div class="form-group">
      <label for="c_password">Confirm Password</label>
      <input type="text" name="c_password"  class="form-control" >
    </div>
  <button type="submit" class="btn btn-primary">Create</button>
</form>
<form action="/searches/new"><button class="btn btn-primary">Back</button></form>
</div>
</html>

