<div class="container">
<p id=”notice”><%= notice %></p>    
<div class="page-header">
<h1>STUDENT REVIEW</h1>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      
      <th scope="col">Review Year</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Reviewer</th>
      <th scope="col">Review Input Date</th>
      <th scope="col">Review Official Deadline</th>
      <th scope="col">Review Release Date</th>
      <th scope="col">Documents</th>
      <th scope="col">Edit review</th>
    </tr>
  </thead>
  <tbody>
    <tr class="table-primary">
      <th scope="row"><%= @review.year %></th>
      <td><%= @review.user.first_name %></td>
      <td><%= @review.user.last_name %></td>
      <td><%= @review.reviewer %></td>
      <td><%= @review.review_student_input_date %></td>
      <td><%= @review.review_official_student_deadline %></td>
      <td><%= @review.review_release_date %></td>
      <td>
      <form action="/view_dec_letter">
        <input type="hidden" name ="uin_let" value ="<%= @review.user[:uin] %>">
        <input type="hidden" name ="year_let" value ="<%= @review[:year] %>">
        <button type ="submit" class="btn btn-primary btn-sm">View Decision Letter</button>
      </form>
     </td>



      <td><%= link_to 'Edit', edit_review_path(@review) %></td>
    </tr>
  </tbody>
</table> 




<div class="card border-primary mb-3" >
  <div class="card-header">Review Score</div>
  <div class="card-body">
    <h4 class="card-text"><%= @review.review_score %></h4>
  </div>
</div>
<div class="card border-primary mb-3" >
  <div class="card-header">Comments for Faculty</div>
  <div class="card-body">
    <p class="card-text"><%= @review.comments_for_faculty %></p>
  </div>
</div>
<div class="card border-primary mb-3" >
  <div class="card-header">Comments for Student</div>
  <div class="card-body">
    <p class="card-text"><%= @review.comments_for_student %></p>
  </div>
</div>
<div class="card border-primary mb-3" >
  <div class="card-header">Notes</div>
  <div class="card-body">
    <p class="card-text"><%= @review.notes %></p>
  </div>
</div>








<form action="/searches"><button class="btn btn-primary">Back</button></form>
<script>
  function openEditForm() {
    var x = document.getElementById("editForm");
    if (x.style.display === "none") {
      x.style.display = "block";
    } else {
      x.style.display = "none";
    }
  }
</script>

<div class="jumbotron" id="editForm" style="display:none">
  <h1 class="display-5">Input Student Details</h1>
  
  <form action=edit_review>
    
  <div class="form-group">
    <label for="review_year">Review Score</label>
    <select class="custom-select" id="review_score">
      <option selected="">Select review score</option>
      <option value="1">Not rated</option>
      <option value="2">Unsatisfactory</option>
      <option value="3">Needs Improvement</option>
      <option value="4">Satisfactory</option>
    </select>
  </div>
 
    <div class="form-group">
      <label for="Comments for Student">Comments for Student</label>
      <textarea class="form-control" id="exampleTextarea" rows="3" spellcheck="false"></textarea>
    </div>
    
    <div class="form-group">
      <label for="Comments for Faculty">Comments for Faculty</label>
      <textarea class="form-control" id="exampleTextarea" rows="3" spellcheck="false"></textarea>
    </div>
  <button type="submit" class="btn btn-primary">Submit</button>
  </form>

<%= link_to 'Edit', edit_review_path(@review) %> |
<%= link_to 'Back', reviews_path %>

</div>


